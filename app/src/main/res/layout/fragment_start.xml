<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StartFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorBackground">

      <ImageView
          android:id="@+id/imLogin"
          android:layout_width="0dp"
          android:layout_height="@dimen/start_image_layout_height"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/brain_im" />

      <TextView
          android:id="@+id/tvQuestion"
          android:layout_width="@dimen/start_text_size_layout_width"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/start_text_view_margin_top"
          android:fontFamily="@font/caveat_bold"
          android:text="@string/login_welcome"
          android:textSize="@dimen/start_text_view_text_size"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imLogin" />

      <info.hoang8f.widget.FButton
          android:id="@+id/btnStart"
          android:layout_width="@dimen/start_button_layout_width"
          android:layout_height="@dimen/start_button_layout_height"
          android:fontFamily="@font/caveat_regular"
          android:text="@string/login_start"
          android:textSize="@dimen/start_button_text_size"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.498"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
          app:layout_constraintVertical_bias="0.3" />
  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>